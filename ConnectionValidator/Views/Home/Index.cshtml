@using System.Collections;
@{ 
    ViewBag.Title = "Index";
}



    <!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>File Counter MVC</title>
    </head>
    <body>
        <div>
            @*@foreach (KeyValuePair<string, string> de in Model)
            {
                <p>@de.Key: @de.Value</p>
            }*@
        </div>

        <form id="StorageAccount-list">
            <h2>StorageAccount List</h2>
            <table id="storage-account-list-table" class="table table-condensed table-hover">
                <thead>
                    <tr>
                        <th>App Settings</th>
                        <th>Storage Account</th>
                        <th>Health Check</th>
                        <th>Details</th>
                    </tr>
                </thead>
                @foreach (var validatedResult in ViewBag.storageValidations)
                {
                   <tr>
                        <td>
                            <span v-show="!item.inEditMode">@validatedResult.AppSettingsKey </span>
                            @*<input type="number" v-bind:placeholder="item.quantity" v-show="item.inEditMode" v-model="item.quantity" />*@
                        </td>
                        <td>
                            <span v-show="!item.inEditMode">@validatedResult.AccountName</span>
                            @*<input v-bind:placeholder="item.itemName" v-show="item.inEditMode" v-model="item.itemName" />*@
                        </td>
                        <td>
                            <button type="button" class="btn btn-success" v-show="item.inEditMode" @*@click="editItemComplete(item)"*@><i class="fa fa-save"></i> Healthy  </button>
                          </td>
                        <td>
                            <span>@validatedResult.Message</span>
                        </td>
                    </tr>
                   } 
                </table>
            <h4>Add new item</h4>
            <div class="row col-md-6">
                <div class="col-md-6 form-group">
                    Quantity
                    <input type="number" v-model="quantity" class="checkbox" autofocus>
                </div>
                <div class="col-md-6 form-group">
                    Name
                    <input type="text" v-model="itemName" class="checkbox">
                </div>

                <button type="button" @*@click="addItem"*@ class="btn btn-primary"><i class="fa fa-plus"></i> Add  </button>
            </div>
        </form>
    </body>
</html>
